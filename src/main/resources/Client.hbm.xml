<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/HibernateMapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class catalog="chatexercise"
           name="com.letoan.chatexercise.pojo.Client" table="client">
        <id name="idclient" type="int">
            <column name="idclient"/>
            <generator class="identity" />
        </id>
        <property name="username" type="string">
            <column name="username" length="45"/>
        </property>
        <property name="password" type="string">
            <column name="password" length="45"/>
        </property>
        <property name="displayname" type="string">
            <column name="displayname" length="45"/>
        </property>
    </class>
</hibernate-mapping>